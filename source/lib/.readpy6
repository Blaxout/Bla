import os
import time

lang = os.getenv('WIKI_LANG', 'es')
lang_path = f"source/{lang}"

ui_texts = {
    'es': {
        "prompt": "WIKI-SOLUCIÓN > ",
        "continue_prompt": "PRESEIONA ENTER PARA CONTINUAR...",
        "invalid_option": "[! ] Opción invalida > ",
        "ctrl_c": "\nCtrl c presionado"
    },
    'fr': {
        "prompt": "WIKI-SOLUTION > ",
        "continue_prompt": "APPUYEZ SUR ENTRÉE POUR CONTINUER...",
        "invalid_option": "[! ] Option invalide > ",
        "ctrl_c": "\nCtrl C pressé"
    }
}
t = ui_texts.get(lang, ui_texts['es'])

def f():
    a = input(t["continue_prompt"])
    os.system(f"bash {lang_path}/solucion")

try:
    b = input(f"\033[1;31m{t['prompt']}\033[1;39m")
    if b == "1" or b == "01":
        os.system(f"python {lang_path}/menu/menu_6/.nl")
        f()
    elif b == "2" or b == "02":
        os.system(f"python {lang_path}/menu/menu_6/.nc")
        f()
    elif b == "3" or b == "03":
        os.system(f"python {lang_path}/menu/menu_6/.on")
        f()
    elif b == "99":
        os.system("bash wiki")
    else:
        print(f"\033[1;31m{t['invalid_option']}\033[1;39m", b)
        time.sleep(0.5)
        os.system(f"bash {lang_path}/solucion")

except KeyboardInterrupt:
    print(f"\033[1;39m{t['ctrl_c']}")