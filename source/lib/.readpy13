import os
import time

lang = os.getenv('WIKI_LANG', 'es')
lang_path = f"source/{lang}"

ui_texts = {
    'es': {
        "prompt": "WIKI-PERSONALIZAR-TERMUX > ",
        "continue_prompt": "PRESIONA ENTER PARA CONTINUAR...",
        "invalid_option": "[!] Opción invalida > ",
        "ctrl_c": "\nCtrl c presionado"
    },
    'fr': {
        "prompt": "WIKI-PERSONNALISER-TERMUX > ",
        "continue_prompt": "APPUYEZ SUR ENTRÉE POUR CONTINUER...",
        "invalid_option": "[!] Option invalide > ",
        "ctrl_c": "\nCtrl C pressé"
    }
}
t = ui_texts.get(lang, ui_texts['es'])

def f():
    c = input(f"\033[1;32m{t['continue_prompt']}")
    os.system(f"bash {lang_path}/ptmux")

try:
    print("")
    a = input(f"\033[1;31m{t['prompt']}\033[1;39m")
    
    if a == "1" or a == "01": os.system(f"python {lang_path}/menu/menu_13/.ps1"); f()
    elif a == "2" or a == "02": os.system(f"python {lang_path}/menu/menu_13/.pname"); f()
    elif a == "3" or a == "03": os.system(f"python {lang_path}/menu/menu_13/.pneo"); f()
    elif a == "4" or a == "04": os.system(f"python {lang_path}/menu/menu_13/.ptmux"); f()
    elif a == "99": os.system("bash wiki")
    else:
        print(f"\033[1;31m{t['invalid_option']}\033[1;39m", a)
        time.sleep(0.5)
        os.system(f"bash {lang_path}/ptmux")

except KeyboardInterrupt:
    print(f"\033[1;39m{t['ctrl_c']}")