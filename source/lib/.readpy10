    elif b == "5" or b == "05": os.system(f"bash {lang_path}/menu/menu_10/.figlet"); f()
    elif b == "6" or b == "06": os.system(f"bash {lang_path}/menu/menu_10/.httrack"); f()
    elif b == "7" or b == "07": os.system(f"bash {lang_path}/menu/menu_10/.lynx"); f()
    elif b == "8" or b == "08": os.system(f"bash {lang_path}/menu/menu_10/.nano"); f()
    elif b == "9" or b == "09": os.system(f"bash {lang_path}/menu/menu_10/.neo"); f()
    elif b == "10": os.system(f"bash {lang_path}/menu/menu_10/.proot"); f()
    elif b == "11": os.system(f"bash {lang_path}/menu/menu_10/.tmux"); f()
